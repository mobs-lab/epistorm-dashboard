{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src/app",
    "paths": {
      "@/shared-components/*": ["components/*"],
      "@/providers/*": ["providers/*"],
      "@/types/*": ["types/*"],
      "@/store/*": ["store/*"],
      "@/styles/*": ["css/*"],
      "@/evaluations/*": ["evaluations/*"],
      "@/forecasts/*": ["forecasts/*"],
      "@/utils/*": ["utils/*"],
      "@/hooks/*": ["hooks/*"]
    }
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
